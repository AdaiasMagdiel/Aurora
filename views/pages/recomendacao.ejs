<%- include("../bin/header.ejs") %>

	<div class="meu-container">
		<div class="row">

			<div class="col s12">
				<div class="card">
					<div class="card-content">
						<p class="center-align">Essa página exibe resultados novos toda vez que é recarregada.</p>
					</div>
				</div>
			</div>

			<% animes.forEach(function(e, i){ %>
				<% const nome = e.nome.replace("Assistir ", "") %>
				<div class="col s12 m6 l4">
					<div class="card">
						<div class="card-image">
							<a class="truncate" href="/anime/<%= e.url %>/1">
								<img class="responsive-img" src="<%= e.imagem %>" alt="<%= nome %>">
							</a>
						</div>
						<div class="card-action">
							<a class="truncate" href="/anime/<%= e.url %>/1"><%= nome %></a>
						</div>
					</div>
				</div>
			<% }); %>

		</div>
	</div>

<%- include("../bin/footer.ejs") %>