<%- include("../bin/header.ejs") %>

	<div class="meu-container">
		<div class="row">

			<% animes.forEach(function(e, i){ %>
				<% const nome = e.nome.replace("Assistir ", "") %>
				<div class="col s12 m6 l4">
					<div class="card">
						<div class="card-image">
							<a href="/anime/<%= e.url %>/1">
								<img class="responsive-img" src="<%= e.imagem %>" alt="<%= nome %>">
							</a>
						</div>
						<div class="card-action">
							<a href="/anime/<%= e.url %>/1"><%= nome %></a>
						</div>
					</div>
				</div>
			<% }); %>

			<div class="col s12">
				<ul class="pagination center-align">
					<% paginas.forEach(function(e, i){ %>
				    	<li class="waves-effect active"><a href="/lancamentos/<%= i+1 %>"><%= i+1 %></a></li>
					<% }); %>
				</ul>
			</div>

		</div>
	</div>

<%- include("../bin/footer.ejs") %>