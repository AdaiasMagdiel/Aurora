<%- include('bin/header.ejs') %>
	
	<div class="meu-container">
		<div class="row">

			<% animes.forEach(function(e, i){ %>
				<div class="col s12 m6 l4">
					<div class="card">
						<div class="card-image">
							<a href="/<%= e.url %>/1">
								<img class="responsive-img" src="<%= e.imagem %>" alt="<%= e.nome %>">
							</a>
						</div>
						<div class="card-action">
							<a href="/<%= e.url %>/1"><%= e.nome %></a>
						</div>
					</div>
				</div>
			<% }); %>

		</div>
	</div>

<%- include('bin/footer.ejs') %>